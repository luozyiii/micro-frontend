# Use pnpm as the package manager
engine-strict=true

# Automatically install peer dependencies
auto-install-peers=true

# Use exact versions for dependencies
save-exact=true

# Disable package-lock.json generation (we use pnpm-lock.yaml)
package-lock=false

# Enable shamefully-hoist for better compatibility
shamefully-hoist=true

# Set registry (uncomment if using private registry)
# registry=https://registry.npmjs.org/

# Cache settings
cache-min=86400

# Progress settings
progress=true

# Audit settings
audit-level=moderate

# Fund messages
fund=false

# Update notifier
update-notifier=false
